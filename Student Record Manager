#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct Student{ int id; char name[50]; float gpa; } Student;

int main(){
    Student arr[100]; int n=0;
    arr[n++] = (Student){1,"Anirudh",9.0};
    arr[n++] = (Student){2,"Ravi",8.5};
    FILE *f=fopen("students.bin","wb"); fwrite(arr,sizeof(Student),n,f); fclose(f);
    Student rr[100]; FILE *fr=fopen("students.bin","rb"); int r=fread(rr,sizeof(Student),100,fr); fclose(fr);
    for(int i=0;i<r;i++) printf("%d %s %.2f\n", rr[i].id, rr[i].name, rr[i].gpa);
    return 0;
}
