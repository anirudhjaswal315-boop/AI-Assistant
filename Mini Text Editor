#include <stdio.h>
#include <stdlib.h>

int main(){
    char name[100];
    printf("Filename: "); scanf("%s",name);
    FILE *f = fopen(name,"a+");
    if(!f){ printf("Error\n"); return 1; }
    printf("Enter text (type EOF on new line to finish):\n");
    char line[512];
    while(1){
        if(!fgets(line,sizeof(line),stdin)) break;
        if(strcmp(line,"EOF\n")==0) break;
        fputs(line,f);
    }
    fclose(f);
    printf("Content:\n%s\n", "Open file to view");
    return 0;
}
