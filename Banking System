#include <stdio.h>

typedef struct Account{ int id; double bal; } Account;

int main(){
    Account a[10]; int n=0; int opt;
    do{
        printf("1:Create 2:Deposit 3:Withdraw 4:Show 5:Exit\n"); scanf("%d",&opt);
        if(opt==1){ a[n].id=n+1; a[n].bal=0; printf("Created ID %d\n", a[n].id); n++; }
        else if(opt==2){ int id; double x; scanf("%d %lf",&id,&x); a[id-1].bal+=x; }
        else if(opt==3){ int id; double x; scanf("%d %lf",&id,&x); if(a[id-1].bal>=x) a[id-1].bal-=x; else printf("Insufficient\n"); }
        else if(opt==4){ for(int i=0;i<n;i++) printf("ID:%d Bal:%.2f\n", a[i].id,a[i].bal); }
    } while(opt!=5);
    return 0;
}
