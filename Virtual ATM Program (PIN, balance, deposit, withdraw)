#include <stdio.h>

int main(){
    int pin=1234, input, attempts=0;
    double bal=1000;
    while(attempts<3){
        printf("Enter PIN: "); scanf("%d",&input);
        if(input==pin) break;
        attempts++;
    }
    if(attempts==3){ printf("Blocked\n"); return 0; }
    int opt;
    do{
        printf("1:Balance 2:Deposit 3:Withdraw 4:Exit\n"); scanf("%d",&opt);
        if(opt==1) printf("Bal: %.2f\n", bal);
        else if(opt==2){ double x; scanf("%lf",&x); bal+=x; }
        else if(opt==3){ double x; scanf("%lf",&x); if(x>bal) printf("Insufficient\n"); else bal-=x; }
    } while(opt!=4);
    return 0;
}
